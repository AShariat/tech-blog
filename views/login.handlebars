<div class="row my-5 d-flex justify-content-center">
  <div class="col-xxl-6 row">
    <form id="login-form" class="login-form col-12 my-5">
      <div class="col-12">
        <label for="email-login" class="form-label">Email:</label>
        <input type="text" id="email-login" class="form-control" />
      </div>
      <div class="col-12">
        <label for="password-login" class="form-label">Password:</label>
        <input type="password" id="password-login" class="form-control" />
      </div>
      <div class="col-12 mt-3">
        <button type="submit" class="form-button">Login</button>
      </div>
    </form>
    <form id="signup-form" class="signup-form col-12 my-5">
      <div class="col-12">
        <label for="username-signup" class="form-label">Username:</label>
        <input type="text" id="username-signup" class="form-control" />
      </div>
      <div class="col-12">
        <label for="email-signup" class="form-label">Email:</label>
        <input type="text" id="email-signup" class="form-control" />
      </div>
      <div class="col-12">
        <label for="password-signup" class="form-label">Password:</label>
        <input type="password" id="password-signup" class="form-control" />
      </div>
      <div class="col-12 mt-3">
        <button type="submit" class="form-button">Signup</button>
      </div>
    </form>
  </div>
</div>
<script src="/javascript/login.js"></script>