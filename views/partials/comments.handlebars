<div class="comments col-12">
  <h5>Comments:</h5>
  {{#each this}}
    <section class="comment">
      <div class="comment-text">
        {{user.username}}
        on
        {{format_date created_at}}
        <div class="text">
          {{comment_text}}
        </div>
      </div>
    </section>
  {{/each}}
</div>