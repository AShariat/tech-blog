{{#if loggedIn}}
<section>
  <h2>Create New Post</h2>
  <form class="new-post-form">
    <div>
      <label for="post-title">Post Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">Post Text</label>
      <input id="post-url" name="post-url" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>
{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
    {{#each posts as |post|}}
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
    {{/each}}
</section>
{{/if}}
{{!-- <script src="/javascript/add-post.js"></script> --}}
{{else}}
  <h4 class="text-center mb-3 mt-3">You Must <a href="/login">Login</a> to Access the Dashboard!</h4>
{{/if}}